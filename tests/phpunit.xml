<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="divvy">
            <directory>./</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory>../vendor/</directory>
        </blacklist>
        <whitelist>
            <directory suffix=".php">../module/</directory>
        </whitelist>
    </filter>
</phpunit>
